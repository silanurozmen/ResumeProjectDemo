@model List<ResumeProjectDemo.Entities.Service>

<section id="services" class="pb-0">
    <div class="container">
        <div class="row mb-8">
            <div class="col-lg-10 col-xl-8 mx-lg-auto text-center">
                <div class="section-title h2 mb-3">
                    <h2 class="mb-0">Hizmetlerim</h2>
                    <span class="title-letter">S</span>
                </div>
                <p>
                    Modern yazılım mimarileri ve güncel teknolojilerle, ölçeklenebilir ve sürdürülebilir çözümler geliştiriyorum.
                    Backend ağırlıklı projelerde; performans, güvenlik ve temiz kod prensiplerini merkeze alarak uçtan uca yazılım süreçlerini yönetiyorum.
                </p>
            </div>
        </div>
        <div class="row my-n2 mx-sm-n2">

            @foreach (var item in Model)
            {
                <div class="col-md-6 col-xl-4 py-2 px-md-2">
                    <div class="feature-block feature-boxed feature-decorated">
                        <div class="feature-icon text-primary mb-3">
                            <div>
                                <i class="@item.IconUrl"></i>
                            </div>
                        </div>
                        <h3 class="h4 mb-2">@item.Title</h3>
                        <p>@item.Description</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>